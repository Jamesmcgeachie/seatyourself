<div class="form">
<%= form_for ([@restaurant, @review]) do |f| %>
	<% if @review.errors.any? %>
		<div class="errors">
			<p>Review failed:</p>
			<ul>
				<% @review.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="labels">
		<p><%= f.label :title %></p>
		<p><%= f.label :body %></p>
	</div>
	<div class="inputs">
		<p><%= f.text_field :title %></p>
		<p><%= f.text_area :body %></p>
	</div>
	<div class="submit">
		<p><%= f.submit %></p>
	</div>
<% end %>
