<div ="review">
	<p><%= review.title %></p>
	<p><%= review.body %></p>
	<% if review.user != nil %>
		<p>by <%= review.user.email %> </p>
		<p>Added on:
			<time><%= review.created_at %></time>
		</p>
	<% end %>
	<% if review.written_by?(current_user) %>
		<p>
			<%= link_to 'Edit review', edit_restaurant_review_path(review.restaurant_id, review.id) %> |
			<%= link_to 'Delete Review', restaurant_review_path(review.restaurant_id, review.id), method: 'delete', data: { confirm: "Are you sure you want to delete this review?" } %>
		</p>
	<% end %>
</div>